{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@huuyafwww/tsconfig-next",
  ],
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // "jsxImportSource": "@emotion/react",
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.js",
  ],
  "exclude": [
    "node_modules",
  ]
}
