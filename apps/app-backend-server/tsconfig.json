{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@huuyafwww/tsconfig-common",
  ],
  "compilerOptions": {
    "paths": {
      "@*": [
        "./src/*"
      ],
      "@test/*": [
        "./tests/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "@types/node",
      "@cloudflare/workers-types",
      "@types/jsonwebtoken",
      "vitest/globals"
    ]
  },
}
