{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false,
      "inputs": ["package.json"]
    },
    "sort:package": {
      "dependsOn": ["^sort:package"],
      "inputs": ["package.json"]
    },
    "lint:code": {
      "dependsOn": ["^lint:code"],
      "inputs": ["package.json"]
    },
    "lint:type": {
      "dependsOn": [],
      "inputs": ["**/*.ts"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["**/*.ts", "**/*.tsx"]
    }
  }
}
