{
  "name": "trastocker",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "scripts": {
    "build:definition": "turbo run build --filter=@trastocker/*-definition",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "lint:code": "turbo lint:code",
    "lint:type": "turbo lint:type",
    "prepare": "husky",
    "sort:package": "sort-package-json && turbo run sort:package",
    "test": "turbo run test --filter=@trastocker/app-backend-server"
  },
  "lint-staged": {
    "{package.json,**/package.json}": [
      "bash -c 'pnpm run sort:package'"
    ]
  },
  "devDependencies": {
    "@praha/eslint-config-definer": "^2.0.1",
    "@types/node": "^22.10.2",
    "eslint": "9.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "rimraf": "^6.0.1",
    "sort-package-json": "^2.12.0",
    "turbo": "^2.3.3",
    "wrangler": "^3.97.0"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.14.4"
  }
}
